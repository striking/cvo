<%= simple_form_for @site, :html => { :class => 'form-group'} do |f| %>
  <%= f.input :title, label: 'Give your site a title' %>
  <%= f.input :address, label: "Enter the Site's street address" %>
  <%= f.input :suburb, label: 'Site suburb' %>
  <%= f.button :submit, :class => 'btn btn-success' %> |
  <%= link_to 'Delete', site_path(@site), method: :destroy, data: {confirm: 'are you sure?'} %>

<% end %>
